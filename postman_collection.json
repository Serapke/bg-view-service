{
	"info": {
		"_postman_id": "view-service-collection",
		"name": "View API",
		"description": "API collection for the View Service - handles user collection views with enriched game data",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "User Collections",
			"item": [
				{
					"name": "Get User Collections (Success)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-User-ID",
								"value": "user123",
								"type": "text",
								"description": "User ID header (required)"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/views/collections",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"views",
								"collections"
							]
						},
						"description": "Retrieves the user's game collection with enriched game details from the game discovery service."
					},
					"response": []
				},
				{
					"name": "Get User Collections (Missing Header)",
					"request": {
						"method": "GET",
						"header": [],
